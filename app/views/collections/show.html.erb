<p id="notice" class="text-center"><%= notice %></p>

<h1 class="text-center">
  <strong><%= @collection.name %></strong>
</h1>

<div style="padding-top: 4px; margin-bottom: 5px"
class="container w-50 bg-light border border-dark border-2">
  <h2 class="text-center">Álbuns</h2>
  <% @collection.albums.each do |album| %>
    <p class="text-center"><%= link_to album.title, collection_album_path(@collection,
    album), class: 'link-dark' %></p>
  <% end %>
  <br>
  <%= link_to 'Novo Álbum', new_collection_album_path(@collection) %>
</div>

<p style="font-size: 18px">
  <%= link_to 'Editar', edit_collection_path(@collection), class: 'btn btn-warning' %>
  <%= link_to 'Deletar', @collection, method: :delete,
  data: { confirm: 'Você tem certeza que deseja Deletar?' }, class: 'btn btn-danger' %>
  <%= link_to 'Voltar', collections_path, class: 'btn btn-primary' %>
  <%= link_to 'Álbuns', collection_albums_path(@collection), class: 'btn btn-info' %>
</p>
